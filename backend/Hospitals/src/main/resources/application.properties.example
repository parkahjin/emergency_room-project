# ========================================
# Emergency Room Application Configuration
# ========================================
# 이 파일을 application.properties로 복사하고 환경변수를 설정하세요.
# 또는 시스템 환경변수로 직접 설정 가능합니다.

spring.application.name=emergency-room

# ========================================
# Server Configuration
# ========================================
# PORT 환경변수가 없으면 기본값 8080 사용
server.port=${PORT:8080}

# ========================================
# Database Configuration
# ========================================
# 필수 환경변수: DB_HOST, DB_PORT, DB_NAME, DB_USERNAME, DB_PASSWORD
# 예시:
#   export DB_HOST=localhost
#   export DB_PORT=3306
#   export DB_NAME=emergency_room
#   export DB_USERNAME=your_username
#   export DB_PASSWORD=your_password

spring.datasource.url=jdbc:mysql://${DB_HOST:localhost}:${DB_PORT:3306}/${DB_NAME:emergency_room}?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
spring.datasource.username=${DB_USERNAME:root}
spring.datasource.password=${DB_PASSWORD:changeme}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# ========================================
# JPA Configuration
# ========================================
# 개발: update, 프로덕션: validate 권장
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.database-platform=org.hibernate.dialect.MySQL8Dialect

# ========================================
# Logging Configuration
# ========================================
# 개발 환경 설정 (프로덕션에서는 INFO 이상 권장)
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE
logging.level.com.project.emergency=INFO

# ========================================
# Kakao API Configuration
# ========================================
# 필수 환경변수: KAKAO_REST_API_KEY, KAKAO_JS_API_KEY
# Kakao Developers (https://developers.kakao.com)에서 발급
# 예시:
#   export KAKAO_REST_API_KEY=your_rest_api_key
#   export KAKAO_JS_API_KEY=your_javascript_key

kakao.api.rest.key=${KAKAO_REST_API_KEY}
kakao.api.js.key=${KAKAO_JS_API_KEY}

# ========================================
# 환경변수 설정 방법
# ========================================
# 1. Linux/Mac:
#    export DB_HOST=localhost
#    export DB_USERNAME=emergency_user
#    export DB_PASSWORD=strong_password
#    export KAKAO_REST_API_KEY=your_key
#    export KAKAO_JS_API_KEY=your_key
#
# 2. Windows (CMD):
#    set DB_HOST=localhost
#    set DB_USERNAME=emergency_user
#    set DB_PASSWORD=strong_password
#    set KAKAO_REST_API_KEY=your_key
#    set KAKAO_JS_API_KEY=your_key
#
# 3. Windows (PowerShell):
#    $env:DB_HOST="localhost"
#    $env:DB_USERNAME="emergency_user"
#    $env:DB_PASSWORD="strong_password"
#    $env:KAKAO_REST_API_KEY="your_key"
#    $env:KAKAO_JS_API_KEY="your_key"
#
# 4. IntelliJ IDEA:
#    Run > Edit Configurations > Environment Variables
#    DB_HOST=localhost;DB_USERNAME=emergency_user;...
#
# 5. AWS Lightsail / EC2:
#    /etc/environment 파일에 추가
#    또는 systemd 서비스 파일의 Environment 섹션에 추가
